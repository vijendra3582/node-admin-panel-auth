<%- include('partials/header'); %>
<div class="form">
    <h1><%- title %></h1>
    <div id="infoMessage">
        <% if(error[0]){ if(error[0].thenError){ %>
            <span class="help-block"><%- error[0].thenError %></span>
        <% }} %>
    </div>
    <form class="form-horizontal" role="form" method="POST" action="/auth/login">
        <div class="form-group <% if(error[0]){ if(error[0].email){ %>has-error<% }} %>">
            <label for="email">E-Mail Address</label>
            <input id="email" type="text" class="form-control" name="email" placeholder="vijendra3582@gmail.com" value="<%= oldInput.value('email') %>" required autofocus>
            <% if(error[0]){ if(error[0].email){ %>
                <span class="help-block"><%- error[0].email.message %></span>
            <% }} %>
        </div>
        <div class="form-group <% if(error[0]){ if(error[0].password){ %>has-error<% }} %>">
            <label for="password">Password</label>
            <input id="password" type="password" class="form-control" name="password" placeholder="********" required>
            <% if(error[0]){ if(error[0].password){ %>
                <span class="help-block"><%- error[0].password.message %></span>
            <% }} %>
        </div>
        <div class="form-group"> <a href="/auth/forgot-password"> Forgot Your Password ? </a> </div>
        <div class="form-group-checkbox">
            <input type="checkbox" id="remember" name="remember">
            <label for="remember"> Remember Me
            </label>
        </div>
        <div class="form-group">
            <input type="submit" name="submit" value="Login" />
        </div>
        <div class="form-group"> <a href="/auth/register"> Don't have account ? </a> </div>
    </form>
</div>
<%- include('partials/footer'); %>
