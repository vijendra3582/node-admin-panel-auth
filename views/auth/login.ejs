<%- include('partials/header'); %>
<div class="form">
    <h1><%- title %></h1>
    <div id="infoMessage"></div>
    <form class="form-horizontal" role="form" method="POST" action="/auth/login">
        <div class="form-group">
            <label for="email">E-Mail Address</label>
            <input id="email" type="email" class="form-control" name="email" placeholder="vijendra3582@gmail.com" value="" required autofocus>
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input id="password" type="password" class="form-control" name="password" placeholder="********" required>
        </div>
        <div class="form-group"> <a href="/auth/forgot-password"> Forgot Your Password ? </a> </div>
        <div class="form-group-checkbox">
            <input type="checkbox" id="remember" name="remember">
            <label for="remember"> Remember Me
            </label>
        </div>
        <div class="form-group">
            <input type="submit" name="submit" value="Login" />
        </div>
        <div class="form-group"> <a href="/auth/register"> Don't have account ? </a> </div>
    </form>
</div>
<%- include('partials/footer'); %>
